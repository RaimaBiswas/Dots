<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/Orange500"
    android:layout_height="wrap_content">

    <ImageView

        android:id="@+id/player_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/easy_ai_icon"/>

    <TextView

        android:id="@+id/player_item_title"
        android:text="Easy AI"
        android:textSize="20dp"
        android:textColor="@color/White"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:id="@+id/player_item_text"
        android:text="Its All Random"
        android:textColor="@color/White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_item_title"
        android:layout_alignLeft="@id/player_item_title" />

    <TextView

        android:id="@+id/player_item_difficulty_level"
        android:textColor="@color/Black"
        android:text="Difficulty : Easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/player_item_text"
         />

</RelativeLayout>

