<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:md_reduce_padding_no_title_no_buttons="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        android:id="@+id/titleFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/md_title_frame_margin_bottom"
        android:paddingTop="@dimen/md_dialog_frame_margin">

        <TextView
        android:id="@+id/title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:textSize="@dimen/md_title_textsize"
        tools:text="Title" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/md_content_textsize"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="24dp"
            tools:text="Message"
            android:layout_gravity="center_horizontal"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.melnykov.fab.FloatingActionButton

            android:id="@+id/player_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/remove"
            android:clickable="false"
            app:fab_type="mini"
            android:layout_marginLeft="50dp"
            fab:fab_colorNormal="@color/RedA100"
            fab:fab_colorPressed="@color/RedA400"
            fab:fab_colorRipple="@color/RedA200"
            />

        <TextView
            android:id="@+id/player_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="2"
            android:textSize="32dp"
            android:layout_alignParentLeft="@id/player_count"
            />

        <com.melnykov.fab.FloatingActionButton

            android:id="@+id/player_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:clickable="false"
            fab:fab_type="mini"
            fab:fab_colorNormal="@color/Lime500"
            fab:fab_colorPressed="@color/Lime700"
            fab:fab_colorRipple="@color/Lime600"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp"/>

        <com.afollestad.materialdialogs.internal.MDButton

            android:id="@+id/negative"
            android:layout_marginTop="25dp"
            style="@style/MD_ActionButton.Text"
            android:layout_below="@id/player_count"
            android:layout_marginLeft="20dp"
            android:layout_alignLeft="@id/player_count"
            android:text="CANCEL"

            />

        <com.afollestad.materialdialogs.internal.MDButton
            android:id="@+id/positive"
            android:layout_marginTop="25dp"
            style="@style/MD_ActionButton.Text"
            android:layout_below="@id/player_count"
            android:layout_toLeftOf="@id/negative"
            android:text="OK" />

    </RelativeLayout>



    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">





    </RelativeLayout><!-- From: file:/Users/afollestad/Projects/material-dialogs/library/src/main/res/layout/md_stub_actionbuttons.xml -->

</LinearLayout>