<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/DeepPurple500"
    android:layout_height="match_parent">



    <FrameLayout android:id="@+id/maximized_list_container"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

    </FrameLayout>

    <FrameLayout android:id="@+id/minimized_list_container"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <FrameLayout android:id="@+id/menu_list_container"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <FrameLayout android:id="@+id/screen_guard"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout

        android:id="@+id/card_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#15000000"
        android:orientation="vertical" />

</FrameLayout>