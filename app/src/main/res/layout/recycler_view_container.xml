<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/recycler_view_shadow"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.RecyclerView

        android:id="@+id/recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

        <com.melnykov.fab.FloatingActionButton

            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_dark_save"
            android:alpha="0"
            android:clickable="false"
            fab:fab_colorNormal="@color/Cyan500"
            fab:fab_colorPressed="@color/Cyan700"
            fab:fab_colorRipple="@color/Cyan600"
            android:layout_marginBottom="2dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>

        <com.melnykov.fab.FloatingActionButton

            android:id="@+id/add_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:alpha="0"
            android:clickable="false"
            fab:fab_type="mini"
            fab:fab_colorNormal="@color/Lime500"
            fab:fab_colorPressed="@color/Lime700"
            fab:fab_colorRipple="@color/Lime600"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />

        <com.melnykov.fab.FloatingActionButton

            android:id="@+id/remove_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/remove"
            android:alpha="0"
            android:clickable="false"
            fab:fab_type="mini"
            fab:fab_colorNormal="@color/OrangeA200"
            fab:fab_colorPressed="@color/OrangeA700"
            fab:fab_colorRipple="@color/OrangeA400"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"/>


</RelativeLayout>